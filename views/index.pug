extends layout.pug

block content
  article.grid-container.portfolio-intro
    div

      h1 Welcome To The Beginning Of Sparked Tech

      p.lead.text-light
        | This is a portfolio of my current projects, with a link to my github.

  article.grid-container.portfolio-index
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3
      each project, index in projects
        .cell
          a(href=`/project/${index}`)
            img.thumbnail(src=`/static/${project.image_urls[0]}`)
            h5 #{project.project_name}
